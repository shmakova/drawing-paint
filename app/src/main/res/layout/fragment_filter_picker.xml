<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_medial_24"
        android:layout_marginLeft="@dimen/spacing_medial_24"
        android:layout_marginRight="@dimen/spacing_medial_24"
        android:layout_marginTop="@dimen/spacing_20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gray_scale_btn"
            style="@style/Filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/grayscale"
            android:text="@string/grayscale_filter"/>

        <TextView
            android:id="@+id/negative_btn"
            style="@style/Filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/invert"
            android:text="@string/negative_filter"/>
    </LinearLayout>

</LinearLayout>