<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_medial_24"
        android:layout_marginLeft="@dimen/spacing_medial_24"
        android:layout_marginRight="@dimen/spacing_medial_24"
        android:layout_marginTop="@dimen/spacing_20"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sticker_1"
            style="@style/Filter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_small_24"
            android:contentDescription="@string/content"
            android:src="@drawable/ic_android_black_24dp"/>

        <ImageView
            android:id="@+id/sticker_2"
            style="@style/Filter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_small_24"
            android:contentDescription="@string/content"
            android:src="@drawable/ic_favorite_black_24dp"/>

        <ImageView
            android:id="@+id/sticker_3"
            style="@style/Filter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_small_24"
            android:contentDescription="@string/content"
            android:src="@drawable/ic_mood_black_24dp"/>

        <ImageView
            android:id="@+id/sticker_4"
            style="@style/Filter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_small_24"
            android:contentDescription="@string/content"
            android:src="@drawable/ic_cat"/>

        <ImageView
            android:id="@+id/sticker_5"
            style="@style/Filter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_small_24"
            android:contentDescription="@string/content"
            android:src="@drawable/ic_panda"/>
    </LinearLayout>

</LinearLayout>